<?xml version='1.0' encoding='UTF-8'?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssm.medical.dao.AdminUserDao">

    <select id="loginUser" resultType="com.ssm.medical.pojo.AdminUser">
        select * from a_user where auname=#{auname} and aupwd=#{aupwd}
    </select>

    <insert id="useradd">
        insert into a_user(auname,aupwd) VALUES(#{auname},#{aupwd})
    </insert>

    <select id="getUsers" resultType="com.ssm.medical.pojo.AdminUser">
        select * from a_user
    </select>

    <delete id="deleteUser">
        delete from a_user where auid=#{auid}
    </delete>

    <select id="getUserPwd" resultType="java.lang.String" parameterType="java.lang.Integer">
        select aupwd from a_user where auid=#{auid}
    </select>

    <update id="updatePwd">
        update a_user set aupwd=#{aupwd} where auid=#{auid}
    </update>
</mapper>